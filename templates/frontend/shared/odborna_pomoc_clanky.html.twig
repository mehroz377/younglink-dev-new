{% from "frontend/macros/clanek.html.twig" import clanek %}

{% extends 'base_page.html.twig' %}

{% block content %}
<div class="flex flex--align-center flex--gap-100 mb-75">
    <h1 class="heading-1 text-gradient">Co může pomoci</h1>
</div>

<div class="flex flex--align-center mb-75">
  <a href="{{ path('app_professional_help_expert') }}" class="no-decoration button button--secondary button--s button--secondary--transparent">Odborníci</a>
  <a href="{{ path('app_professional_help_video') }}" class="no-decoration button button--secondary button--s button--secondary--transparent">Videa</a>
  <a href="{{ path('app_professional_help_articles') }}" class="no-decoration button button--secondary button--s">Články</a>
</div>

<div>
  <p class="my-75 heading-4">Přečtěte si některý z článků napsaných ve spolupráci s odborníky na dětský kolektiv.</p>
</div>

<div class="grid grid--3-columns grid--gap-75 mb-100">
  {% for article in articles %}
    {{ clanek(article.image, article.date|date('j.n.Y'), article.title, path('app_professional_help_article_detail',{'slug':article.slug})) }}
  {% endfor %}
</div>
{% endblock %}