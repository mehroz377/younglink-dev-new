{% from "frontend/macros/back_button.html.twig" import backButton %}
{% extends 'base_page.html.twig' %}

{% block content %}
    <div class="flex flex--align-center flex--gap-100 mb-75">
        {{backButton("#")}}<h1 class="heading-1 text-gradient">Nové šetření</h1>
    </div>

    <form>
        <div class="rectangle rectangle--l mb-75">
            <h2 class="heading-3 mb-50">Jaké šetření chcete zahájit</h2>
            <div class="grid grid--gap-50 grid--2-columns">
                <label for="option-1">
                    <input type="radio" id="option-1" name="options" class="form__radio display-none">
                    <div class="rectangle rectangle--s">
                        <div class="mb-25">
                            <h3 class="heading-3 text-brand flex flex--align-center flex--gap-25">{{ source('@svg/contract-edit.svg') }}Velké obecné šetření</h3>
                        </div>
                        <div>
                            <p class="text-xs text-secondary align-left">Obecné šetření je vhodné pro zachycení základních fenoménů jako je úoveň sociálního klima uvnitř třídy či přítomnost negativních vztahů mezi dětmi. Šetření zabere dětem 5-10 minut.</p>
                        </div>
                    </div>
                </label>
                <label for="option-2">
                    <input type="radio" id="option-2" name="options" class="form__radio display-none">
                    <div class="rectangle rectangle--s">
                        <div class="mb-25">
                            <h3 class="heading-3 text-brand flex flex--align-center flex--gap-25">{{ source('@svg/contract-edit.svg') }}Velké obecné šetření</h3>
                        </div>
                        <div>
                            <p class="text-xs text-secondary align-left">Obecné šetření je vhodné pro zachycení základních fenoménů jako je úoveň sociálního klima uvnitř třídy či přítomnost negativních vztahů mezi dětmi. Šetření zabere dětem 5-10 minut.</p>
                        </div>
                    </div>
                </label>
            </div>
            <div class="horizontal-line my-100"></div>
            <div class="grid grid--gap-50 grid--2-columns">
                <div>
                    <h2 class="heading-3 mb-50">Za kdy má být vyplněno</h2>
                    <div>
                        <div class="rectangle rectangle--s rectangle--spacing-50 mb-100">
                            <input type="date">
                        </div>
                    </div>
                </div>
                <div>
                    <h2 class="heading-3 mb-50">Vyberte žáky</h2>
                    <div>
                        <div class="rectangle rectangle--s rectangle--spacing-50 mb-100">
                            <select name="students" id="">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="horizontal-line my-100"></div>
            <div>
                <button class="button button--primary button--m flex flex--align-center flex--gap-25">{{ source('@svg/contract-edit.svg') }} Naplánovat šetření</button>
            </div>
        </div>
    </form>

    {% set newInvestigationLink = "www.younglink.cz/setreni/20230727" %}
    <div class="rectangle rectangle--l mb-75">
        <h2 class="heading-3 mb-100">Sdílet šetření</h2>
        <div class="rectangle rectangle--s rectangle--spacing-50 mb-100">
            {{ newInvestigationLink }}
        </div>
        <button class="button button--secondary button--m flex flex--gap-25 flex--align-center" data-link="{{newInvestigationLink}}">{{ source('@svg/content-copy.svg') }}Zkopírovat odkaz</button>
    </div>
{% endblock %}